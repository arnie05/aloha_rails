= form_for @cool do |f|
  -if @cool.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cool.errors.count, "error")} prohibited this cool from being saved:"
      %ul
        - @cool.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
